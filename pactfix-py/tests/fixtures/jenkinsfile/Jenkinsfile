pipeline {
    agent {
        docker { image 'python:3.11' }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building'
            }
        }
        stage('Install') {
            steps {
                sh "curl -s https://example.com/install.sh -o /tmp/script.sh && bash /tmp/script.sh"
            }
        }
    }
    environment {
        PASSWORD = 'secret123'
    }
}